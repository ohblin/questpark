<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.questpark.helloworld.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/play_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="91dp"
        android:onClick="play" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stop_btn"
        android:onClick="stop"
        android:layout_alignTop="@+id/play_btn"
        android:layout_toRightOf="@+id/play_btn"
        android:layout_toEndOf="@+id/play_btn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mytext"
        android:height="100dp"
        android:layout_above="@+id/sayBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Init usb"
        android:id="@+id/usbButton"
        android:layout_alignTop="@+id/stop_btn"
        android:layout_toRightOf="@+id/stop_btn"
        android:layout_toEndOf="@+id/stop_btn"
        android:onClick="initUsb" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="say"
        android:id="@+id/sayBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="playPass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="repeat"
        android:id="@+id/repeat_btn"
        android:layout_alignTop="@+id/usbButton"
        android:layout_toRightOf="@+id/usbButton"
        android:layout_toEndOf="@+id/usbButton"
        android:onClick="switchRepeat" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/startButton"
        android:onClick="startGame"
        android:layout_below="@+id/stop_btn"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/mytext"
        android:width="200dp"
        android:focusable="true" />

</RelativeLayout>
